# audio bindings
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks 
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks
bindsym XF86AudioPlay exec playerctl play-pause && pkill -RTMIN+1 i3blocks
bindsym XF86AudioPause exec playerctl play-pause && pkill -RTMIN+1 i3blocks
bindsym XF86AudioNext exec playerctl next && pkill -RTMIN+1 i3blocks
bindsym XF86AudioPrev exec playerctl previous && pkill -RTMIN+1 i3blocks

